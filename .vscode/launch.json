{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "make build and debug project",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/nfa-to-dfa",
      "args": [
        "ilene.txt"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "make build project"
    }
  ]
}